<component type="desktop">
  <id>telegnome.desktop</id>
  <metadata_license>MIT</metadata_license>
  <project_license>GPL-2.0+</project_license>
  <name>TeleGNOME</name>
  <summary>Viewer for Teletext pages</summary>

  <description>
    <p>
      TeleGNOME is a program to display teletext pages over the internet,
      based on image feeds from a variety of broadcasters.
    </p>
  </description>

  <url type="homepage">https://telegnome.sourceforge.io/</url>
  <project_group>GNOME</project_group>
  <update_contact>cjwatson@debian.org</update_contact>

  <provides>
    <binary>telegnome</binary>
  </provides>

  <releases>
    <release version="0.3.7" date="2025-03-28">
      <description>
        <ul>
          <li>Work around Vala code generation bug with GCC &gt;= 14.</li>
          <li>Add logo to About dialog.</li>
        </ul>
      </description>
    </release>
    <release version="0.3.6" date="2021-08-30">
      <description>
        <ul>
          <li>Update website URL.</li>
          <li>Remove some autoconf deprecation warnings.</li>
        </ul>
      </description>
    </release>
    <release version="0.3.5" date="2019-09-05">
      <description>
        <ul>
          <li>Remove dconf dependency (Tomasz MiÄ…sko).</li>
        </ul>
      </description>
    </release>
    <release version="0.3.4" date="2019-01-11">
      <description>
        <ul>
          <li>Stop using deprecated Gtk.show_uri.  Now requires GTK+ >= 3.22.</li>
          <li>Use modern AppStream installation directory.</li>
        </ul>
      </description>
    </release>
    <release version="0.3.3" date="2017-06-18">
      <description>
        <ul>
          <li>Fix build with Vala 0.36.</li>
        </ul>
      </description>
    </release>
    <release version="0.3.2" date="2016-07-07">
      <description>
        <ul>
          <li>Fix incorrect description of paging-enabled key.</li>
          <li>Migrate from gnome-doc-utils to yelp-tools.</li>
          <li>Port away from gnome-common.</li>
          <li>Stop using deprecated ACLOCAL_AMFLAGS.</li>
          <li>Migrate from intltool to Gettext.</li>
        </ul>
      </description>
    </release>
    <release version="0.3.1" date="2016-02-20">
      <description>
        <ul>
          <li>Actually install icons.</li>
          <li>Add AppStream metadata.</li>
        </ul>
      </description>
    </release>
    <release version="0.3.0" date="2016-02-15">
      <description>
        <ul>
          <li>Add Italian teletext channel.</li>
          <li>Rewrite in Vala.</li>
        </ul>
      </description>
    </release>
  </releases>
</component>
